{
  "manifest_version": 3,
  "name": "URL Display Extension",
  "version": "1.0",
  "description": "Displays the current tab's URL in a popup",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
} 